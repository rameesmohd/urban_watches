<%- include('../layouts/UserHeader.ejs',{session,cartData}) %>
<style>
		body{
	background-color: #eee;
  }
  
 

  .form-control::placeholder {
	font-size: 5px;
  }
  
  
  div.stars {
	width: 10px;
  
	display: inline-block;
  }
  
  
  input.star { display: none; }
  
  label.star {
  
	float: right;
  
	padding: 5px;
  
	font-size: 15px;
  
	color: #818181;
  
	transition: all .2s;
  
  }
  
  
  input.star:checked ~ label.star:before {
  
	content: '\f005';
  
	color: #FD4;
  
	transition: all .25s;
  
  }
  
   
  input.star-5:checked ~ label.star:before {
  
	color: #FE7;
  
	text-shadow: 0 0 10px #952;
  
  }
  
  input.star-1:checked ~ label.star:before { color: #F62; }
  
  label.star:hover { transform: rotate(-15deg) scale(1.3); }
  
  label.star:before {
  
	content: '\f006';
  
	font-family: FontAwesome;
  
  }

    [data-crl8-container-id="custom-gallery"] {
     display: none;
    }

   .card-container h3 > a.anchor-mask { text-decoration: none !important; }
   .card-container h3 > a.anchor-mask::after {
       content: '';
       position: absolute;
       left: 0;
       top: 0;
       right: 0;
       bottom: 0;
   }

   .card-container b, p, i, small, span, strong { position: relative; }

   .fsl-set-02152023-spring{
        max-width: 100%;
        height: auto;
    }
</style>
	
	<!-- breadcrumb -->
	<div class="container">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
				Home
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<a href="#" class="stext-109 cl8 hov-cl1 trans-04">
				Men
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<span class="stext-109 cl4">
				<%=product.name %>
			</span>
		</div>
	</div>
	
	<!-- Product Detail -->
	<section class="sec-product-detail bg0 p-t-65 p-b-60">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-lg-7 p-b-30">
					<div class="p-l-25 p-r-30 p-lr-0-lg">
						<div class="wrap-slick3 flex-sb flex-w">
							<div class="wrap-slick3-dots"></div>
							<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

							<div class="slick3 gallery-lb">
								<div class="item-slick3" data-thumb="/productimages/<%= product.image[0] %>">
									<div class="wrap-pic-w pos-relative image-container">
										<img src="/productimages/<%= product.image[0] %>" alt="IMG-PRODUCT">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/productimages/<%= product.image[0] %>">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>

								<div class="item-slick3" data-thumb="/productimages/<%= product.image[1] %>">
									<div class="wrap-pic-w pos-relative image-container">
										<img src="/productimages/<%= product.image[1] %>" alt="IMG-PRODUCT">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/productimages/<%= product.image[1] %>">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>

								<div class="item-slick3" data-thumb="/productimages/<%= product.image[2] %>">
									<div class="wrap-pic-w pos-relative image-container">
										<img src="/productimages/<%= product.image[2] %>" alt="IMG-PRODUCT">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/productimages/<%= product.image[2] %>">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
					
				<div class="col-md-6 col-lg-5 p-b-30">
					<div class="p-r-50 p-t-5 p-lr-0-lg">
							<h4 class="mtext-105 cl2 js-name-detail p-b-14">
							<%= product.name %>
							</h4>
							<div class="d-flex align-items-center ">

									<span class="mtext-106 cl2">
										â‚¹<%= product.price %>
									</span>
									
									<div style="margin-left: 80px;">
										<% if(product.rating != null || typeof product.rating != 'undefined'){ %>
											<input class="star star-5" id="star-5" type="radio" <% if (product.rating == 5) { %>checked<% } %> disabled/>
											<label class="star star-5" for="star-5"></label>
											
											<input class="star star-4" id="star-4" type="radio" <% if (product.rating == 4) { %>checked<% } %> disabled/>
											<label class="star star-4" for="star-4"></label>
											
											<input class="star star-3" id="star-3" type="radio"  <% if (product.rating == 3) { %>checked<% } %> disabled/>
											<label class="star star-3" for="star-3"></label>
											
											<input class="star star-2" id="star-2" type="radio" <% if (product.rating == 2) { %>checked<% } %> disabled/>
											<label class="star star-2" for="star-2"></label>
											
											<input class="star star-1" id="star-1" type="radio" <% if (product.rating == 1) { %>checked<% } %> disabled/>
											<label class="star star-1" for="star-1"></label>
										  <% } %>
									</div>
								</div>

							<p class="stext-102 cl3 p-t-23">
							<%= product.description %>
							</p>
						

							<div class="flex-w flex-r-m p-b-20">

								<div class="block2-txt-child2 flex-r p-t-10 p-r-30">

									<div id="<%= product._id %>icon2" style="display: none;" onclick="removewishlist('<%= product._id %>')" class="pos-relative">
									<img class="icon-heart2 trans-04 h-100 w-75 m-r-50" src="images/icons/icon-heart-02.png" alt="ICON" style="cursor: pointer;">
									</div>
								 
	
									<div id="<%= product._id %>icon1"  onclick="addtowishlist('<%= product._id %>')" class="pos-relative">
									<img class="icon-heart1 trans-04 h-100 w-75 m-r-50" src="images/icons/icon-heart-01.png" alt="ICON" style="cursor: pointer;">
									</div>

								</div>

								<div class="size-204 flex-w flex-m respon6-next p-b-10">

									<span class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04  mt-3" style="cursor: pointer;" onclick="addtocart('<%=product._id %>')">Add to cart</span>								</div>
							
							    </div>	
						</div>
				
					</div>
			</div>
		</div>
		<% if(product.rating != null || typeof product.rating != 'undefined'){ %>
		<div class="col-12 d-flex flex-col-l justify-content-center align-items-center m-t-73 mb-3">
				<div>
					<h3 class="">User Reviews</h3>
				</div>
				<div>
					<% if(product.rating != null || typeof product.rating != 'undefined'){ %>
						<input class="star star-5" id="star-5" type="radio" <% if (product.rating == 5) { %>checked<% } %> disabled/>
						<label class="star star-5" for="star-5"></label>
						
						<input class="star star-4" id="star-4" type="radio" <% if (product.rating == 4) { %>checked<% } %> disabled/>
						<label class="star star-4" for="star-4"></label>
						
						<input class="star star-3" id="star-3" type="radio"  <% if (product.rating == 3) { %>checked<% } %> disabled/>
						<label class="star star-3" for="star-3"></label>
						
						<input class="star star-2" id="star-2" type="radio" <% if (product.rating == 2) { %>checked<% } %> disabled/>
						<label class="star star-2" for="star-2"></label>
						
						<input class="star star-1" id="star-1" type="radio" <% if (product.rating == 1) { %>checked<% } %> disabled/>
						<label class="star star-1" for="star-1"></label>
					  <% } %>
				</div>
	    </div>
		<% } %>

	<% if(product.rating != null || typeof product.rating != 'undefined'){ %>
		<% for(let j=0 ;j < product.user_review.length ;j++){%>
			<% for(let k = 0 ; k < product.user_rating.length ;k++ ){ %>
				<% if(product.user_review.user === product.user_rating.user){ %>
				<div class="col-12  d-flex mb-2" style="padding-left: 15%; padding-right: 15%;">
					<div class="bg-light col-lg-7 flex-col-l flex-w size-302  p-tb-10 px-5 ">
					<div>
					<input class="star star-5" id="star-5<% product.user_rating.user %>" type="radio" <% if (product.rating == 5) { %>checked<% } %> disabled/>
					<label class="star star-5" for="star-5<% product.user_rating.user %>"></label>
					
					<input class="star star-4" id="star-4<% product.user_rating.user %>" type="radio" <% if (product.rating == 4) { %>checked<% } %> disabled/>
					<label class="star star-4" for="star-4<% product.user_rating.user %>"></label>
					
					<input class="star star-3" id="star-3<% product.user_rating.user %>" type="radio"  <% if (product.rating == 3) { %>checked<% } %> disabled/>
					<label class="star star-3" for="star-3<% product.user_rating.user %>"></label>
					
					<input class="star star-2" id="star-2<% product.user_rating.user %>" type="radio" <% if (product.rating == 2) { %>checked<% } %> disabled/>
					<label class="star star-2" for="star-2<% product.user_rating.user %>"></label>
					
					<input class="star star-1" id="star-1<% product.user_rating.user %>" type="radio" <% if (product.rating == 1) { %>checked<% } %> disabled/>
					<label class="star star-1" for="star-1<% product.user_rating.user %>"></label>
					</div>

					<div class="">
						<p class="text-secondary mb-0 "  id="preview<% product.user_rating.user %>">"<%= product.user_review[j].review %>"</p>
					</div>
			</div>
			<div class="bg-light col-5 p-tb-10">
					<p id="<% product.user_rating.user %>" class="text-secondary ">Submited By: <%= product.user_review[j].user.name  %></p>
			</div>
		</div>

	 <% }}}} %>

		<div class="bg6 flex-c-m flex-w size-302 m-t-73 p-tb-15">
			<span class="stext-107 cl6 p-lr-25">
				Category :  <%= product.category.name  %>
			</span>
		</div>
	</section>

